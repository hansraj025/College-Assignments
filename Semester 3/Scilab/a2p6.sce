//Find the first and last digit of a number and their sum
clear;
clc;

n = 5678;
//Finding the last modulo(n, 10) will be the first place digit
last = modulo(n, 10);
first = last
while n > 10
    n = n - first 
    n = n/10
    first = modulo(n,10)
end
//first = n
disp("First digit = " + string(first))
disp("Second digit = "+ string(last))
disp("Sum = " + string(first + last))
